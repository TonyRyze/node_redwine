<div class="active-wrap common-wrap">
  <ul class="clear">
    <% actives.map(function(v, i){ %>
      <li class="item-<%= i + 1 %> item">
        <% if (isMobile) { %>
          <div class="item-wrap">
            <a href="/active/<%= v._id %>"><img class="lazyload" data-original="<%= v.listImg.url %>" alt=""></a>
            <p class="active-text" title="<%= v.titleFirst %>"><%= v.titleFirst %><span class="icon-arrow"></span></p>
          </div>
        <% } else{%>
          <div class="item-wrap">
            <img src="<%= v.listImg.url %>" alt="">
            <p class="active-text" title="<%= v.titleFirst %>"><%= v.titleFirst %></p>
            <div class="active-title">
                <div class="wrap">
                    <p title="<%= v.titleSecond %>"><%= v.titleSecond %></p>
                </div>
            </div>
          </div>
          <span class="icon-arrow"></span>
        <%}%>
      </li>
    <% }) %>
  </ul>
</div>