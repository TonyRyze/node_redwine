	<%-include("include/header", {title: title})%>
    <div class="global-wrapper">
      <!-- S 公共头部 -->
      <div class="g-header clear">
        <% if (isMobile) { %>
          <%-include("include/navmobile")%>
        <% } else{%>
          <%-include("include/navpc")%>
        <%}%>
      </div>
      <!-- E 公共头部 -->
      <div class="main-content">
        <div class="activeDetail-page" id="activeDetail">
          <% if (!!activeDetail) { %>
          	<div class="acitve-swiper">
				<div class="swiper-container">
					<ul class="clear swiper-wrapper">
						<% activeDetail.detailImg.map(function(v, i){ %>
							<li class="swiper-slide">
								<img src="<%=v.url%>" alt="" />
							</li>
						<% }) %>
					</ul>
				</div>
				<div class="pagation-active">
	              <ul>
	                <% activeDetail.detailImg.map(function(v1, i1){ %>
	                  <% if(i1 === 0){ %>
	                    <li class="pagation-item on">
	                      <img src="<%= v1.url %>" alt="">
	                    </li>
	                  <% } else{ %>
	                    <li class="pagation-item">
	                      <img src="<%= v1.url %>" alt="">
	                    </li>
	                  <% } %>
	                <% }) %>
	              </ul>
	            </div>
          	</div>
            <div class="active-intro">
				<div class="intro-title">
					<h4><%=activeDetail.titleFirst%></h4>
					<p>发布日期：<%= new Date(activeDetail.date).getFullYear() + "年" + (new Date(activeDetail.date).getMonth() + 1) + "月" + new Date(activeDetail.date).getDate() %></p>
				</div>
				<p class="intro-content"><%= activeDetail.titleSecond %></p>
            </div>
          	<% } else{ %>
            <p class="tips">暂无该条产品的详细信息！</p>
          <% } %>
        </div>
      </div>
      <!-- S 公共尾部 -->
      <%-include("include/footer")%>
      <!-- E 公共尾部 -->
    </div>
  </body>
</html>
